            <!-- Logo -->
            <a href="~/" class="flex items-center text-white no-underline">
                <i class="fas fa-hotel text-white text-3xl md:text-4xl mr-2"></i>
                <span class="text-2xl md:text-4xl font-bold">VietNamBooking</span>
            </a>

            <!-- Mobile Menu Button -->
            <div class="md:hidden">
                <button id="menu-toggle" class="text-white text-3xl focus:outline-none">
