<!-- Hero Section -->
<section style="background: linear-gradient(135deg, #003087 0%, #0056b3 100%); color: #fff; padding: 60px 0;">
    <div class="container">
        <div class="text-center">
            <h1 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 20px;">
                Đặt phòng khách sạn dễ dàng nhất Việt Nam
            </h1>
            <p style="font-size: 1.25rem; max-width: 600px; margin: 0 auto;">
                Hơn 10,000 khách sạn từ bình dân đến cao cấp với giá tốt nhất
            </p>
            <div style="margin-top: 30px;">
                <a asp-controller="Bookings" asp-action="Search" class="btn" style="background-color: #fff; color: #003087; border-radius: 8px; padding: 10px 20px; margin-right: 10px;">
                    <i class="fas fa-search mr-2"></i> Tìm khách sạn
                </a>
                <a asp-controller="Promotions" asp-action="Index" class="btn" style="background-color: #FF6200; color: #fff; border-radius: 8px; padding: 10px 20px;">
                    <i class="fas fa-percent mr-2"></i> Ưu đãi hôm nay
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Search Section -->
<section style="margin-top: -40px;">
    <div class="container">
        <div class="bg-white shadow-lg rounded-lg p-5">
            <form asp-controller="Bookings" asp-action="Search" method="get">
                <div class="row">
                    <div class="col-md-3 form-group">
                        <label style="color: #003087;">Địa điểm</label>
                        <div class="input-group">
                            <input type="text" name="location" class="form-control" placeholder="Thành phố, khách sạn..." style="border-radius: 8px;">
                            <span class="input-group-addon"><i class="fas fa-map-marker-alt"></i></span>
                        </div>
                    </div>
                    <div class="col-md-3 form-group">
                        <label style="color: #003087;">Ngày nhận phòng</label>
                        <div class="input-group">
                            <input type="text" name="checkInDate" class="form-control date-picker" style="border-radius: 8px;">
                            <span class="input-group-addon"><i class="fas fa-calendar-alt"></i></span>
                        </div>
                    </div>
                    <div class="col-md-3 form-group">
                        <label style="color: #003087;">Ngày trả phòng</label>
                        <div class="input-group">
                            <input type="text" name="checkOutDate" class="form-control date-picker" style="border-radius: 8px;">
                            <span class="input-group-addon"><i class="fas fa-calendar-alt"></i></span>
                        </div>
                    </div>
                    <div class="col-md-3 form-group" style="display: flex; align-items: flex-end;">
                        <button type="submit" class="btn btn-block" style="background-color: #FF6200; color: #fff; border-radius: 8px;">Tìm kiếm</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

