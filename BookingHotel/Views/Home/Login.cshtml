@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
    ViewBag.Title = "Đăng Nhập - VietNamBooking";
}

<div class="container mx-auto max-w-6xl">
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden flex flex-col md:flex-row">
        <!-- Left side - Image -->
        <div class="md:w-1/2 relative">
            <!-- background-image-keyword: luxury hotel room; background-image-color: blue -->
            <div class="h-full bg-blue-600 flex items-center justify-center">
                <div class="text-white p-12 text-center">
                    <h1 class="text-4xl font-bold mb-4">Khách sạn cao cấp</h1>
                    <p class="text-xl mb-8">Trải nghiệm dịch vụ đẳng cấp với hệ thống đặt phòng tiện lợi</p>
                    <div class="flex justify-center space-x-4">
                        <div class="bg-blue-500 p-3 rounded-full">
                            <i class="fas fa-wifi text-white text-xl"></i>
                        </div>
                        <div class="bg-blue-500 p-3 rounded-full">
                            <i class="fas fa-utensils text-white text-xl"></i>
                        </div>
                        <div class="bg-blue-500 p-3 rounded-full">
                            <i class="fas fa-swimming-pool text-white text-xl"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right side - Forms -->
        <div class="md:w-1/2 p-8 md:p-12">
            <!-- Tabs -->
            <div class="flex border-b border-gray-200 mb-8">
                <button id="loginTab" class="py-2 px-4 font-medium text-blue-600 border-b-2 border-blue-600">Đăng nhập</button>
                <button id="registerTab" class="py-2 px-4 font-medium text-gray-500 hover:text-blue-600">Đăng ký</button>
            </div>

            <!-- Login Form -->
            <form id="loginForm" asp-controller="Home" asp-action="Login" method="post" class="space-y-6">
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
                        @ViewBag.ErrorMessage
                    </div>
                }
                <div>
                    <label for="loginEmail" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                    <input type="email" id="loginEmail" name="email" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
                    <p id="loginEmailError" class="text-red-500 text-xs mt-1 hidden">Vui lòng nhập email hợp lệ</p>
                </div>

                <div>
                    <label for="loginPassword" class="block text-sm font-medium text-gray-700 mb-1">Mật khẩu</label>
                    <div class="relative">
                        <input type="password" id="loginPassword" name="password" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
                        <button type="button" class="absolute right-3 top-2 text-gray-400 hover:text-gray-600" onclick="togglePassword('loginPassword')">
                            <i class="far fa-eye"></i>
                        </button>
                    </div>
                    <p id="loginPasswordError" class="text-red-500 text-xs mt-1 hidden">Vui lòng nhập mật khẩu</p>
                </div>

                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <input id="rememberMe" type="checkbox" name="rememberMe" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                        <label for="rememberMe" class="ml-2 block text-sm text-gray-700">Ghi nhớ đăng nhập</label>
                    </div>
                    <a href="#" class="text-sm text-blue-600 hover:underline">Quên mật khẩu?</a>
                </div>

                <button type="submit" class="w-full bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                    Đăng nhập
                </button>

                <div class="text-center text-sm text-gray-500">
                    Hoặc đăng nhập bằng
                </div>

                <div class="flex justify-center space-x-4">
                    <button type="button" class="p-2 border border-gray-300 rounded-full hover:bg-gray-50">
                        <i class="fab fa-google text-red-500"></i>
                    </button>
                    <button type="button" class="p-2 border border-gray-300 rounded-full hover:bg-gray-50">
                        <i class="fab fa-facebook-f text-blue-600"></i>
                    </button>
                </div>
            </form>

            <!-- Register Form -->
            <form id="registerForm" asp-controller="Account" asp-action="Register" method="post" class="space-y-6 hidden">
                <div>
                    <label for="registerName" class="block text-sm font-medium text-gray-700 mb-1">Họ và tên</label>
                    <input type="text" id="registerName" name="name" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
                    <p id="registerNameError" class="text-red-500 text-xs mt-1 hidden">Vui lòng nhập họ tên</p>
                </div>

                <div>
                    <label for="registerEmail" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                    <input type="email" id="registerEmail" name="email" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
                    <p id="registerEmailError" class="text-red-500 text-xs mt-1 hidden">Vui lòng nhập email hợp lệ</p>
                </div>

                <div>
                    <label for="registerPhone" class="block text-sm font-medium text-gray-700 mb-1">Số điện thoại</label>
                    <input type="tel" id="registerPhone" name="phone" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
                    <p id="registerPhoneError" class="text-red-500 text-xs mt-1 hidden">Vui lòng nhập số điện thoại</p>
                </div>

                <div>
                    <label for="registerPassword" class="block text-sm font-medium text-gray-700 mb-1">Mật khẩu</label>
                    <div class="relative">
                        <input type="password" id="registerPassword" name="password" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
                        <button type="button" class="absolute right-3 top-2 text-gray-400 hover:text-gray-600" onclick="togglePassword('registerPassword')">
                            <i class="far fa-eye"></i>
                        </button>
                    </div>
                    <p id="registerPasswordError" class="text-red-500 text-xs mt-1 hidden">Mật khẩu phải có ít nhất 6 ký tự</p>
                </div>

                <div>
                    <label for="registerConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Nhập lại mật khẩu</label>
                    <div class="relative">
                        <input type="password" id="registerConfirmPassword" name="confirmPassword" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
                        <button type="button" class="absolute right-3 top-2 text-gray-400 hover:text-gray-600" onclick="togglePassword('registerConfirmPassword')">
                            <i class="far fa-eye"></i>
                        </button>
                    </div>
                    <p id="registerConfirmPasswordError" class="text-red-500 text-xs mt-1 hidden">Mật khẩu không khớp</p>
                </div>

                <div class="flex items-center">
                    <input id="agreeTerms" type="checkbox" required name="agreeTerms" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                    <label for="agreeTerms" class="ml-2 block text-sm text-gray-700">Tôi đồng ý với <a href="#" class="text-blue-600 hover:underline">Điều khoản dịch vụ</a> và <a href="#" class="text-blue-600 hover:underline">Chính sách bảo mật</a></label>
                </div>

                <button type="submit" class="w-full bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                    Đăng ký
                </button>
            </form>
        </div>
    </div>
</div>