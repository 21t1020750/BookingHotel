@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
    ViewBag.Title = "Đặt Phòng - VietNamBooking";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VietNamBooking - Ứng dụng đặt phòng khách sạn</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="styles.css"> <!-- Link to external CSS -->
</head>
<body class="font-sans antialiased text-gray-800 bg-gray-50 smooth-scroll">
    <!-- Hero Section -->
    <section class="hero-gradient text-white py-16 min-h-[50vh] flex items-center" style="background: linear-gradient(135deg, #F0FFFF 0%, #B0E0E6 100%);">
        <div class="container max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <h1 class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-extrabold tracking-tight">
                Đặt phòng khách sạn dễ dàng nhất Việt Nam
            </h1>
            <p class="mt-6 max-w-lg mx-auto text-lg sm:text-xl lg:text-2xl leading-relaxed">
                Hơn 10,000 khách sạn từ bình dân đến cao cấp với giá tốt nhất
            </p>
            <div class="mt-10 sm:mt-12 max-w-md mx-auto sm:max-w-none sm:flex sm:justify-center sm:gap-6">
                <a asp-controller="Bookings" asp-action="Search" class="flex items-center justify-center px-6 py-3 bg-white text-[#003087] rounded-lg text-base sm:text-lg font-medium hover:bg-gray-100 transition duration-200">
                    <i class="fas fa-search mr-2"></i> Tìm khách sạn
                </a>
                <a asp-controller="Promotions" asp-action="Index" class="flex items-center justify-center px-6 py-3 bg-[#00A1D6] text-white rounded-lg text-base sm:text-lg font-medium hover:bg-[#008CBA] transition duration-200">
                    <i class="fas fa-percent mr-2"></i> Ưu đãi hôm nay
                </a>
            </div>
        </div>
    </section>

    <!-- Search Section -->
    <div id="searchBar" class="text-lg normal bg-white shadow-2xl -mt-12 mx-auto w-[1200px] rounded-2xl p-4 sm:p-5 relative z-10">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4 sm:gap-6">
            <div>
                <label for="location" class="block text-lg sm:text-2xl font-medium text-gray-700">Địa điểm</label>
                <div class="mt-2 relative rounded-lg shadow-sm">
                    <input type="text" id="location" class="focus:ring-cyan-500 focus:border-cyan-500 block w-full pl-4 pr-12 py-3 sm:py-4 text-sm sm:text-2xl border-gray-300 rounded-lg transition duration-200" placeholder="Thành phố, khách sạn...">
                    <div class="absolute inset-y-0 right-0 flex items-center pr-4">
                        <i class="fas fa-map-marker-alt text-cyan-500 text-2xl sm:text-3xl"></i>
                    </div>
                </div>
            </div>
            <div>
                <label for="checkin" class="block text-lg sm:text-2xl font-medium text-gray-700">Ngày nhận phòng</label>
                <div class="mt-2 relative rounded-lg shadow-sm">
                    <input type="date" id="checkin" class="focus:ring-cyan-500 focus:border-cyan-500 block w-full pl-4 pr-12 py-3 sm:py-4 text-sm sm:text-2xl border-gray-300 rounded-lg transition duration-200">
                    <div class="absolute inset-y-0 right-0 flex items-center pr-4">
                        <i class="fas fa-map-marker-alt text-cyan-500 text-2xl sm:text-3xl"></i>
                    </div>
                </div>
            </div>
            <div>
                <label for="checkout" class="block text-lg sm:text-2xl font-medium text-gray-700">Ngày trả phòng</label>
                <div class="mt-2 relative rounded-lg shadow-sm">
                    <input type="date" id="checkout" class="focus:ring-cyan-500 focus:border-cyan-500 block w-full pl-4 pr-12 py-3 sm:py-4 text-sm sm:text-2xl border-gray-300 rounded-lg transition duration-200">
                    <div class="absolute inset-y-0 right-0 flex items-center pr-4">
                        <i class="fas fa-map-marker-alt text-cyan-500 text-2xl sm:text-3xl"></i>
                    </div>
                </div>
            </div>
            <div class="flex items-end">
                <button type="button" class="w-full bg-cyan-600 text-white rounded-xl py-4 sm:py-4 px-6 text-sm sm:text-2xl font-medium hover:bg-cyan-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-cyan-500 transition duration-200 btn-hover">
                    <i class="fas fa-search mr-2"></i> Tìm kiếm
                </button>
            </div>
        </div>
    </div>

    <!-- CSS Sticky & Blur -->
    <link rel="stylesheet" href="~/css/PageCSS/SearchSection.css" />

    <!-- JavaScript Scroll Behavior -->
    <script src="~/js/PageJS/SearchSection.js"></script>


    <!-- Khách Sạn Khuyến Mãi -->
    <div id="hotels" class="w-full mx-auto px-4 sm:px-6 lg:px-8 py-16 sm:py-20">
        <div class="flex justify-between items-center">
            <h2 class="text-2xl sm:text-3xl lg:text-4xl font-extrabold text-gray-900">Khách sạn khuyến mãi</h2>
            <a href="#promotions" class="text-cyan-600 hover:text-cyan-800 font-medium text-base sm:text-lg lg:text-xl">Xem tất cả <i class="fas fa-chevron-right ml-1"></i></a>
        </div>
        <p class="mt-3 text-base sm:text-lg lg:text-xl text-gray-500">Ưu đãi đặc biệt chỉ có tại VietNamBooking</p>
        <div class="mt-8 sm:mt-10 grid grid-cols-1 gap-6 sm:gap-8 sm:grid-cols-2 lg:grid-cols-4">
            <!-- Hotel 1 -->
            <div class="card-hover image-hover bg-white rounded-2xl overflow-hidden shadow-lg transition duration-300">
                <div class="relative overflow-hidden responsive-image">
                    <img src="https://images.unsplash.com/photo-1566073771259-6a8506099945" alt="Khách sạn" class="w-full h-full object-cover transition duration-500">
                    <div class="absolute top-3 right-3 bg-red-500 text-white text-xs sm:text-sm font-bold px-2 sm:px-3 py-1 rounded-lg">-30%</div>
                </div>
                <div class="p-4 sm:p-6">
                    <h3 class="font-bold text-lg sm:text-xl lg:text-2xl text-cyan-700">Vinpearl Luxury Đà Nẵng</h3>
                    <div class="flex items-center mt-2">
                        <i class="fas fa-map-marker-alt text-gray-400 text-sm mr-2"></i>
                        <span class="text-gray-600 text-xs sm:text-sm">Đà Nẵng</span>
                    </div>
                    <div class="flex items-center mt-2 sm:mt-3">
                        <div class="flex text-yellow-400">
                            <i class="fas fa-star text-xs sm:text-sm"></i><i class="fas fa-star text-xs sm:text-sm"></i><i class="fas fa-star text-xs sm:text-sm"></i><i class="fas fa-star text-xs sm:text-sm"></i><i class="fas fa-star text-xs sm:text-sm"></i>
                        </div>
                        <span class="text-gray-500 text-xs sm:text-sm ml-2">(128 đánh giá)</span>
                    </div>
                    <div class="mt-3 sm:mt-4 flex justify-between items-center">
                        <div>
                            <span class="text-gray-400 text-xs sm:text-sm line-through">3,500,000đ</span>
                            <p class="text-cyan-600 font-bold text-base sm:text-lg lg:text-xl">2,450,000đ</p>
                        </div>
                        <button class="bg-cyan-100 text-cyan-600 px-3 sm:px-4 py-2 rounded-lg text-xs sm:text-sm font-medium hover:bg-cyan-200 transition duration-200">
                            <i class="fas fa-bookmark mr-1"></i> Lưu
                        </button>
                    </div>
                </div>
            </div>
            <!-- Hotel 2 -->
            <div class="card-hover image-hover bg-white rounded-2xl overflow-hidden shadow-lg transition duration-300">
                <div class="relative overflow-hidden responsive-image">
                    <img src="https://images.unsplash.com/photo-1551882547-ff40c63fe5fa" alt="Resort" class="w-full h-full object-cover transition duration-500">
                    <div class="absolute top-3 right-3 bg-red-500 text-white text-xs sm:text-sm font-bold px-2 sm:px-3 py-1 rounded-lg">-25%</div>
                </div>
                <div class="p-4 sm:p-6">
                    <h3 class="font-bold text-lg sm:text-xl lg:text-2xl text-cyan-700">Fusion Resort Phú Quốc</h3>
                    <div class="flex items-center mt-2">
                        <i class="fas fa-map-marker-alt text-gray-400 text-sm mr-2"></i>
                        <span class="text-gray-600 text-xs sm:text-sm">Phú Quốc</span>
                    </div>
                    <div class="flex items-center mt-2 sm:mt-3">
                        <div class="flex text-yellow-400">
                            <i class="fas fa-star text-xs sm:text-sm"></i><i class="fas fa-star text-xs sm:text-sm"></i><i class="fas fa-star text-xs sm:text-sm"></i><i class="fas fa-star text-xs sm:text-sm"></i><i class="fas fa-star-half-alt text-xs sm:text-sm"></i>
                        </div>
                        <span class="text-gray-500 text-xs sm:text-sm ml-2">(96 đánh giá)</span>
                    </div>
                    <div class="mt-3 sm:mt-4 flex justify-between items-center">
                        <div>
                            <span class="text-gray-400 text-xs sm:text-sm line-through">2,800,000đ</span>
                            <p class="text-cyan-600 font-bold text-base sm:text-lg lg:text-xl">2,100,000đ</p>
                        </div>
                        <button class="bg-cyan-100 text-cyan-600 px-3 sm:px-4 py-2 rounded-lg text-xs sm:text-sm font-medium hover:bg-cyan-200 transition duration-200">
                            <i class="fas fa-bookmark mr-1"></i> Lưu
                        </button>
                    </div>
                </div>
            </div>
            <!-- Hotel 3 -->
            <div class="card-hover image-hover bg-white rounded-2xl overflow-hidden shadow-lg transition duration-300">
                <div class="relative overflow-hidden responsive-image">
                    <img src="https://images.unsplash.com/photo-1596178065887-1198b6148b2b" alt="Boutique Hotel" class="w-full h-full object-cover transition duration-500">
                    <div class="absolute top-3 right-3 bg-red-500 text-white text-xs sm:text-sm font-bold px-2 sm:px-3 py-1 rounded-lg">-20%</div>
                </div>
                <div class="p-4 sm:p-6">
                    <h3 class="font-bold text-lg sm:text-xl lg:text-2xl text-cyan-700">La Siesta Hội An</h3>
                    <div class="flex items-center mt-2">
                        <i class="fas fa-map-marker-alt text-gray-400 text-sm mr-2"></i>
                        <span class="text-gray-600 text-xs sm:text-sm">Hội An</span>
                    </div>
                    <div class="flex items-center mt-2 sm:mt-3">
                        <div class="flex text-yellow-400">
                            <i class="fas fa-star text-xs sm:text-sm"></i><i class="fas fa-star text-xs sm:text-sm"></i><i class="fas fa-star text-xs sm:text-sm"></i><i class="fas fa-star text-xs sm:text-sm"></i><i class="fas fa-star text-xs sm:text-sm"></i>
                        </div>
                        <span class="text-gray-500 text-xs sm:text-sm ml-2">(215 đánh giá)</span>
                    </div>
                    <div class="mt-3 sm:mt-4 flex justify-between items-center">
                        <div>
                            <span class="text-gray-400 text-xs sm:text-sm line-through">1,500,000đ</span>
                            <p class="text-cyan-600 font-bold text-base sm:text-lg lg:text-xl">1,200,000đ</p>
                        </div>
                        <button class="bg-cyan-100 text-cyan-600 px-3 sm:px-4 py-2 rounded-lg text-xs sm:text-sm font-medium hover:bg-cyan-200 transition duration-200">
                            <i class="fas fa-bookmark mr-1"></i> Lưu
                        </button>
                    </div>
                </div>
            </div>
            <!-- Hotel 4 -->
            <div class="card-hover image-hover bg-white rounded-2xl overflow-hidden shadow-lg transition duration-300">
                <div class="relative overflow-hidden responsive-image">
                    <img src="https://images.unsplash.com/photo-1520250497591-112f2f40a3f4" alt="Beach Resort" class="w-full h-full object-cover transition duration-500">
                    <div class="absolute top-3 right-3 bg-red-500 text-white text-xs sm:text-sm font-bold px-2 sm:px-3 py-1 rounded-lg">-15%</div>
                </div>
                <div class="p-4 sm:p-6">
                    <h3 class="font-bold text-lg sm:text-xl lg:text-2xl text-cyan-700">InterContinental Nha Trang</h3>
                    <div class="flex items-center mt-2">
                        <i class="fas fa-map-marker-alt text-gray-400 text-sm mr-2"></i>
                        <span class="text-gray-600 text-xs sm:text-sm">Nha Trang</span>
                    </div>
                    <div class="flex items-center mt-2 sm:mt-3">
                        <div class="flex text-yellow-400">
                            <i class="fas fa-star text-xs sm:text-sm"></i><i class="fas fa-star text-xs sm:text-sm"></i><i class="fas fa-star text-xs sm:text-sm"></i><i class="fas fa-star text-xs sm:text-sm"></i><i class="fas fa-star text-xs sm:text-sm"></i>
                        </div>
                        <span class="text-gray-500 text-xs sm:text-sm ml-2">(178 đánh giá)</span>
                    </div>
                    <div class="mt-3 sm:mt-4 flex justify-between items-center">
                        <div>
                            <span class="text-gray-400 text-xs sm:text-sm line-through">4,200,000đ</span>
                            <p class="text-cyan-600 font-bold text-base sm:text-lg lg:text-xl">3,570,000đ</p>
                        </div>
                        <button class="bg-cyan-100 text-cyan-600 px-3 sm:px-4 py-2 rounded-lg text-xs sm:text-sm font-medium hover:bg-cyan-200 transition duration-200">
                            <i class="fas fa-bookmark mr-1"></i> Lưu
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Điểm đến nổi bật trong nước -->
    <div id="destinations" class="py-16 sm:py-20">
        <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center">
                <h2 class="text-2xl sm:text-3xl lg:text-4xl font-extrabold text-gray-900">Điểm đến nổi bật trong nước</h2>
                <p class="mt-4 max-w-2xl mx-auto text-base sm:text-lg lg:text-xl text-gray-500">Khám phá những địa điểm du lịch hấp dẫn nhất Việt Nam</p>
            </div>
            <div class="mt-10 sm:mt-12 grid grid-cols-1 gap-6 sm:gap-8 sm:grid-cols-2 lg:grid-cols-3">
                <!-- Destination 1 -->
                <div class="card-hover image-hover relative rounded-2xl overflow-hidden shadow-lg responsive-destination">
                    <img src="https://images.unsplash.com/photo-1596422846543-75c6fc197f07" alt="Sa Pa" class="w-full h-full object-cover transition duration-500">
                    <div class="absolute inset-0 bg-gradient-to-t from-gray-900/80 via-gray-900/40"></div>
                    <div class="absolute bottom-0 left-0 p-6 sm:p-8 w-full">
                        <h3 class="text-white text-xl sm:text-2xl lg:text-3xl font-bold">Sa Pa</h3>
                        <p class="mt-2 text-gray-200 text-sm sm:text-base">Thiên đường nghỉ dưỡng miền Bắc</p>
                        <div class="mt-4 flex justify-between items-center">
                            <span class="text-white font-medium text-sm sm:text-base">Từ 500,000đ/đêm</span>
                            <button class="bg-white text-cyan-600 px-3 sm:px-4 py-2 rounded-lg text-xs sm:text-sm font-medium hover:bg-cyan-50 transition duration-200">Khám phá</button>
                        </div>
                    </div>
                </div>
                <!-- Destination 2 -->
                <div class="card-hover image-hover relative rounded-2xl overflow-hidden shadow-lg responsive-destination">
                    <img src="https://images.unsplash.com/photo-1566073771259-6a8506099945" alt="Phú Quốc" class="w-full h-full object-cover transition duration-500">
                    <div class="absolute inset-0 bg-gradient-to-t from-gray-900/80 via-gray-900/40"></div>
                    <div class="absolute bottom-0 left-0 p-6 sm:p-8 w-full">
                        <h3 class="text-white text-xl sm:text-2xl lg:text-3xl font-bold">Phú Quốc</h3>
                        <p class="mt-2 text-gray-200 text-sm sm:text-base">Đảo ngọc xinh đẹp miền Nam</p>
                        <div class="mt-4 flex justify-between items-center">
                            <span class="text-white font-medium text-sm sm:text-base">Từ 700,000đ/đêm</span>
                            <button class="bg-white text-cyan-600 px-3 sm:px-4 py-2 rounded-lg text-xs sm:text-sm font-medium hover:bg-cyan-50 transition duration-200">Khám phá</button>
                        </div>
                    </div>
                </div>
                <!-- Destination 3 -->
                <div class="card-hover image-hover relative rounded-2xl overflow-hidden shadow-lg responsive-destination">
                    <img src="https://images.unsplash.com/photo-1551882547-ff40c63fe5fa" alt="Đà Lạt" class="w-full h-full object-cover transition duration-500">
                    <div class="absolute inset-0 bg-gradient-to-t from-gray-900/80 via-gray-900/40"></div>
                    <div class="absolute bottom-0 left-0 p-6 sm:p-8 w-full">
                        <h3 class="text-white text-xl sm:text-2xl lg:text-3xl font-bold">Đà Lạt</h3>
                        <p class="mt-2 text-gray-200 text-sm sm:text-base">Thành phố ngàn hoa mộng mơ</p>
                        <div class="mt-4 flex justify-between items-center">
                            <span class="text-white font-medium text-sm sm:text-base">Từ 600,000đ/đêm</span>
                            <button class="bg-white text-cyan-600 px-3 sm:px-4 py-2 rounded-lg text-xs sm:text-sm font-medium hover:bg-cyan-50 transition duration-200">Khám phá</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Lên kế hoạch dễ dàng và nhanh chóng -->
    <div id="steps" class="w-full mx-auto px-4 sm:px-6 lg:px-8 py-16 sm:py-20">
        <div class="text-center">
            <h2 class="text-2xl sm:text-3xl lg:text-4xl font-extrabold text-gray-900">Lên kế hoạch dễ dàng và nhanh chóng</h2>
            <p class="mt-4 max-w-2xl mx-auto text-base sm:text-lg lg:text-xl text-gray-500">VietNamBooking giúp bạn lên kế hoạch du lịch hoàn hảo chỉ với vài bước đơn giản</p>
        </div>
        <div class="mt-10 sm:mt-12 grid grid-cols-1 gap-6 sm:gap-8 md:grid-cols-4">
            <!-- Step 1 -->
            <div class="text-center">
                <div class="flex items-center justify-center h-12 w-12 sm:h-14 sm:w-14 rounded-full bg-cyan-600 text-white text-xl sm:text-2xl font-bold mx-auto shadow-lg">1</div>
                <h3 class="mt-4 sm:mt-6 text-base sm:text-lg lg:text-xl font-medium text-gray-900">Chọn điểm đến</h3>
                <p class="mt-2 text-sm sm:text-base text-gray-500">Tìm kiếm và chọn địa điểm bạn muốn đến</p>
            </div>
            <!-- Step 2 -->
            <div class="text-center">
                <div class="flex items-center justify-center h-12 w-12 sm:h-14 sm:w-14 rounded-full bg-cyan-600 text-white text-xl sm:text-2xl font-bold mx-auto shadow-lg">2</div>
                <h3 class="mt-4 sm:mt-6 text-base sm:text-lg lg:text-xl font-medium text-gray-900">Chọn khách sạn</h3>
                <p class="mt-2 text-sm sm:text-base text-gray-500">Xem đánh giá và chọn khách sạn phù hợp</p>
            </div>
            <!-- Step 3 -->
            <div class="text-center">
                <div class="flex items-center justify-center h-12 w-12 sm:h-14 sm:w-14 rounded-full bg-cyan-600 text-white text-xl sm:text-2xl font-bold mx-auto shadow-lg">3</div>
                <h3 class="mt-4 sm:mt-6 text-base sm:text-lg lg:text-xl font-medium text-gray-900">Đặt phòng</h3>
                <p class="mt-2 text-sm sm:text-base text-gray-500">Nhập thông tin và xác nhận đặt phòng</p>
            </div>
            <!-- Step 4 -->
            <div class="text-center">
                <div class="flex items-center justify-center h-12 w-12 sm:h-14 sm:w-14 rounded-full bg-cyan-600 text-white text-xl sm:text-2xl font-bold mx-auto shadow-lg">4</div>
                <h3 class="mt-4 sm:mt-6 text-base sm:text-lg lg:text-xl font-medium text-gray-900">Tận hưởng</h3>
                <p class="mt-2 text-sm sm:text-base text-gray-500">Nhận xác nhận và tận hưởng chuyến đi</p>
            </div>
        </div>
    </div>

    <!-- Gợi ý khám phá -->
    <div id="experiences" class="py-16 sm:py-20">
        <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center">
                <h2 class="text-2xl sm:text-3xl lg:text-4xl font-extrabold text-gray-900">Gợi ý khám phá</h2>
                <p class="mt-4 max-w-2xl mx-auto text-base sm:text-lg lg:text-xl text-gray-500">Những trải nghiệm du lịch đáng nhớ dành cho bạn</p>
            </div>
            <div class="mt-10 sm:mt-12 grid grid-cols-1 gap-6 sm:gap-8 sm:grid-cols-2 lg:grid-cols-3">
                <!-- Experience 1 -->
                <div class="card-hover bg-white rounded-2xl overflow-hidden shadow-lg">
                    <img src="https://images.unsplash.com/photo-1573270689103-d7a4e42b609a" alt="Du thuyền Hạ Long" class="w-full responsive-image object-cover">
                    <div class="p-4 sm:p-6">
                        <h3 class="font-bold text-lg sm:text-xl lg:text-2xl text-cyan-700">Du thuyền Hạ Long</h3>
                        <p class="mt-2 text-gray-600 text-sm sm:text-base">Trải nghiệm đêm trên vịnh với các dịch vụ cao cấp</p>
                        <div class="mt-3 sm:mt-4 flex justify-between items-center">
                            <span class="text-cyan-600 font-bold text-base sm:text-lg">1,200,000đ/người</span>
                            <button class="text-cyan-600 hover:text-cyan-800 font-medium text-base sm:text-lg">Chi tiết <i class="fas fa-chevron-right ml-1"></i></button>
                        </div>
                    </div>
                </div>
                <!-- Experience 2 -->
                <div class="card-hover bg-white rounded-2xl overflow-hidden shadow-lg">
                    <img src="https://images.unsplash.com/photo-1551882547-ff40c63fe5fa" alt="Đèn lồng Hội An" class="w-full responsive-image object-cover">
