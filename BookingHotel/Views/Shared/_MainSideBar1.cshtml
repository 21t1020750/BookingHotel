<aside class="main-sidebar">
    <section class="sidebar">
        <ul class="sidebar-menu" data-widget="tree">
            @if (Context.Session.GetString("UserRole") == "Admin")
            {
                <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "AdminDashboard" ? "active" : "")">
                    <a asp-controller="AdminDashboard" asp-action="Index">
                        <i class="fas fa-tachometer-alt" style="color: #FF6200;"></i> <span>Dashboard</span>
                    </a>
                </li>
                <li class="treeview @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Rooms" || ViewContext.RouteData.Values["Controller"]?.ToString() == "RoomTypes" || ViewContext.RouteData.Values["Controller"]?.ToString() == "Customers" || ViewContext.RouteData.Values["Controller"]?.ToString() == "Employees" || ViewContext.RouteData.Values["Controller"]?.ToString() == "Services" ? "active" : "")">
                    <a href="#">
                        <i class="fa-solid fa-database" style="color: #FF6200;"></i> <span>Dữ Liệu</span>
                        <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                        </span>
                    </a>
                    <ul class="treeview-menu">
                        <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Rooms" ? "active" : "")">
                            <a asp-controller="Rooms" asp-action="Index">
                                <i class="fa fa-circle-o" style="color: #FF6200;"></i> Phòng
                            </a>
                        </li>
                        <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "RoomTypes" ? "active" : "")">
                            <a asp-controller="RoomTypes" asp-action="Index">
                                <i class="fa fa-circle-o" style="color: #FF6200;"></i> Thể Loại Phòng
                            </a>
                        </li>
                        <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Customers" ? "active" : "")">
                            <a asp-controller="Customers" asp-action="Index">
                                <i class="fa fa-circle-o" style="color: #FF6200;"></i> Khách Hàng
                            </a>
                        </li>
                        <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Employees" ? "active" : "")">
                            <a asp-controller="Employees" asp-action="Index">
                                <i class="fa fa-circle-o" style="color: #FF6200;"></i> Nhân Viên
                            </a>
                        </li>
                        <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Services" ? "active" : "")">
                            <a asp-controller="Services" asp-action="Index">
                                <i class="fa fa-circle-o" style="color: #FF6200;"></i> Dịch Vụ
                            </a>
                        </li>
                    </ul>
                </li>
                <li class="treeview @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Bookings" ? "active" : "")">
                    <a href="#">
                        <i class="fa-solid fa-cart-plus" style="color: #FF6200;"></i> <span>Quản Lý Booking</span>
                        <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                        </span>
                    </a>
                    <ul class="treeview-menu">
                        <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Bookings" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                            <a asp-controller="Bookings" asp-action="Index">
                                <i class="fa fa-circle-o" style="color: #FF6200;"></i> Danh Mục Booking
                            </a>
                        </li>
                        <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Bookings" && ViewContext.RouteData.Values["Action"]?.ToString() == "Create" ? "active" : "")">
                            <a asp-controller="Bookings" asp-action="Create">
                                <i class="fa fa-circle-o" style="color: #FF6200;"></i> Lập Booking
                            </a>
                        </li>
                    </ul>
                </li>
                <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["Action"]?.ToString() == "Logout" ? "active" : "")">
                    <a asp-controller="Home" asp-action="Logout">
                        <i class="fas fa-sign-out-alt" style="color: #FF6200;"></i> <span>Đăng xuất</span>
                    </a>
                </li>
            }
            else
            {
                <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["Action"]?.ToString() == "Login" ? "active" : "")">
                    <a asp-controller="Home" asp-action="Login">
                        <i class="fas fa-sign-in-alt" style="color: #FF6200;"></i> <span>Đăng nhập</span>
                    </a>
                </li>
            }
            <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")">
                <a asp-controller="Home" asp-action="WebBooking">
                    <i class="fas fa-home" style="color: #FF6200;"></i> <span>Trang chủ</span>
                </a>
            </li>
        </ul>
    </section>
</aside>