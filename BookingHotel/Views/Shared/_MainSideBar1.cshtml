                    </li>
                    <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "RoomTypes" ? "active" : "")">
                        <a href="~/RoomTypes"><i class="fa fa-circle-o" style="color: #FF6200;"></i> Thể Loại Phòng</a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Customers" ? "active" : "")">
