                <div class="flex space-x-4">
                    <a href="~/Account/Login" class="bg-[#FF6200] text-white px-4 py-2 rounded-lg text-lg font-medium hover:bg-[#e55b00] transition">Đăng nhập</a>
                    <a href="~/Account/Register" class="bg-white text-[#003087] px-4 py-2 rounded-lg text-lg font-medium hover:bg-gray-100 transition">Đăng ký</a>
                </div>
            </nav>
        </div>

        <!-- Mobile Navigation (Hidden by default) -->
        <nav id="mobile-menu" class="md:hidden max-h-0 overflow-hidden transition-all duration-300 mt-4 space-y-4 text-center">
            <a href="~/" class="text-lg font-medium hover:text-gray-200 transition block">Trang chủ</a>
            <a href="~/Hotels" class="text-lg font-medium hover:text-gray-200 transition block">Khách sạn</a>
